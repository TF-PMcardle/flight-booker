= form_tag(search_for_flight_path, :method => "get") do
 = select_tag :search, options_from_collection_for_select(@results, "depairport", "depairport"), {:prompt => 'Departure Airport'}
 = select_tag :search_arr_airport, options_from_collection_for_select(@results, "arrairport", "arrairport"), {:prompt => 'Arrival Airport'}
 = select_tag :search_dep_date, options_from_collection_for_select(@results, "datetime", "datetime"), {:prompt => 'Date'}
 = select_tag :placeholder, options_for_select([ '1', '2', '3', '4']), {:prompt => 'Number of Passengers'}
 = button_tag "Search for Flight"
%h3 Search Results
%h6 Please save the flight ID of the flight you choose before moving on, as you will have to input this in the next page
- @results.each do |result|
 = "Flight ID: #{result.id}" 
 %br/
 = "Departure Airport: #{result.depairport}"
 %br/
 = "Arrival Airport: #{result.arrairport}"
 %br/
 = "Date And Time: #{result.datetime}"
 %br/
 %br/
 = link_to "Book This Flight", about_path 
 %br/
